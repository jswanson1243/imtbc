<p id="notice"><%= notice %></p>


  <h2 align="center">Title: <%= @article.title %></h2>
    <div class="well col-xs-8 col-xs-offset-2">
      <h4 class="center description"><strong>Report:</strong></h4>
       <hr>
         <%= simple_format(@article.description) %>
          <div class="article-actions">
            <%= link_to "Edit this Report", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Report", article_path(@article), method: :delete,
                         data: { confirm: "Are you sure you want to delete the Report?"},
                         class: "btn btn-xs btn-danger" %>
            <%= link_to "View all Reports", articles_path, class: "btn btn-xs btn-success" %>
          </div>
    </div>


